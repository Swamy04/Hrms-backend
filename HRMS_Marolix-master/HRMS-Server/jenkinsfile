pipeline {
    agent any

    stages {
        stage(checkout) {
            steps {
                git branch: 'main', url: 'https://github.com/Swamy04/Hrms-backend.git'
            }
        }
        
        stage('python dependencies') {
            steps{
               script{
                   sh 'pipenv install --dev'
               } 
            }
        }
        stage(build){
            steps {
                dir ("/var/lib/jenkins/workspace/hrms/HRMS_Marolix-master/HRMS-Server"){
                    script{
                        sh 'docker build -t hrmsimg .'
                    }
                }
            }
        }
         
        }
        
    }
    

