pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Setup') {
            steps {
                sh 'pip install -r requirements.txt'  // Install dependencies
            }
        }
        
        stage('Test') {
            steps {
                sh 'python manage.py test'  // Run Django tests
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'python manage.py migrate'  // Apply migrations
                sh 'python manage.py collectstatic --noinput'  // Collect static files
                // Additional deployment steps (e.g., restart server, etc.)
            }
        }
    }
}
